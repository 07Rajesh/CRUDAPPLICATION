@{
    Layout =null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/Utility.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">SignUp Here</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group" id="FormGroupName">
                                    <label>Name: <span class="mandatory">*</span></label>
                                    <input type="text" name="Name" id="txtName" class="form-control" />
                                    <span id="errName"></span>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group" id="FormGroupEmail">
                                    <label>Email: <span class="mandatory">*</span></label>
                                    <input type="text" name="Email" id="txtEmail" class="form-control" />
                                    <span id="errEmail"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group" id="FormGroupPassword">
                                    <label>Password: <span class="mandatory">*</span></label>
                                    <input type="password" name="Password" id="txtPassword" class="form-control" />
                                    <span id="errPassword"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group" id="FormGroupGender">
                                    <label>Select Gender: <span class="mandatory">*</span></label>
                                    <select id="ddlGender" class="form-control">
                                        <option value="-1">Select</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                        <option value="3">Other</option>
                                    </select>
                                    <span id="errGender"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group" id="FormGroupMobile">
                                    <label>Mobile Number: <span class="mandatory">*</span></label>
                                    <input type="text" name="Mobile" id="txtMobile" class="form-control" />
                                    <span id="errMobile"></span>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group" id="FormGroupAddress">
                                    <label>Address: <span class="mandatory">*</span></label>
                                    <textarea name="Address" id="txtAddress" class="form-control"></textarea>
                                    <span id="errAddress"></span>
                                </div>
                            </div>
                            
                            <div class="col-6">
                                <div class="form-group" id="FormGroupIs_Active">
                                    <label>Is_Active: <span class="mandatory">*</span></label>
                                    <textarea name="Is_Active" id="number" class="form-control"></textarea>
                                    <span id="errIs_Active"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group" id="FormGroupSignUp">
                                    <button type="button" class="btn btn-success" id="btnSignUp">SignUp</button>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <a asp-action="Login" asp-controller="Account">Already have account login here </a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <p class="text-info">@ViewBag.message</p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/SignUp.js"></script>
</body>
</html>


